layout: null
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= roles.title %></title>
    <link rel="preconnect" href="https://secure.meetupstatic.com" />

    <style>
      /* --- General Body & Font Styles --- */
      body {
        font-family: Roboto, "Helvetica Neue", Helvetica, Arial, sans-serif;
        background-color: #f9fafb;
        color: #1f2937;
        margin: 0;
      }

      /* --- Main Container --- */
      .container {
        max-width: 1280px;
        margin-left: auto;
        margin-right: auto;
        padding: 3rem 1rem;
      }
      @media (min-width: 768px) {
        .container {
          padding-top: 5rem;
          padding-bottom: 5rem;
        }
      }

      /* --- Pre-Header Link --- */
      .pre-header {
        text-align: center;
        margin-bottom: 1.5rem;
      }
      .pre-header a {
        font-size: 1rem;
        font-weight: 600;
        color: #4f46e5;
        text-decoration: underline;
        transition: color 0.2s ease-in-out;
      }
      .pre-header a:hover {
        color: #3730a3;
      }

      /* --- Header Section --- */
      .header {
        text-align: center;
        margin-bottom: 3rem;
      }
      .header h1 {
        font-size: 2.25rem;
        font-weight: 700;
        color: #111827;
        margin-bottom: 1rem;
      }
      @media (min-width: 768px) {
        .header h1 {
          font-size: 3rem;
        }
      }
      .header p {
        font-size: 1.125rem;
        color: #4b5563;
        max-width: 42rem;
        margin-left: auto;
        margin-right: auto;
      }

      /* --- Roles Grid --- */
      .roles-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
      }

      /* --- Card Base Styles --- */
      .card {
        background-color: #ffffff;
        border-radius: 0.75rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
          0 4px 6px -4px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        flex: 1 1 280px;
        max-width: 320px;
      }

      /* --- Specific Card Variants --- */
      .occupied-card {
        transition: transform 0.3s ease-in-out;
      }
      .occupied-card:hover {
        transform: scale(1.05);
      }
      .unoccupied-card {
        justify-content: space-between;
        border: 2px dashed #6366f1;
      }

      /* --- Card Content --- */
      .card-img {
        width: 7rem;
        height: 7rem;
        margin-left: auto;
        margin-right: auto;
        border-radius: 9999px;
        object-fit: cover;
        border: 4px solid #e5e7eb;
        margin-bottom: 1rem;
      }

      /* --- CSS Placeholder for Image --- */
      .card-img-placeholder {
        background-color: #e0e7ff;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #4338ca;
        font-weight: 700;
        font-size: 1.5rem;
      }
      .card-img-placeholder::before {
        content: "You?";
      }

      .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111827;
      }
      .card-name {
        font-size: 1rem;
        font-weight: 500;
        color: #6b7280;
      }
      .card-name-link {
        color: #4f46e5;
        text-decoration: underline;
      }
      .card-name-link:hover {
        color: #3730a3;
      }
      .unoccupied-card > div > a {
        text-decoration: none;
      }
      .card-status {
        font-size: 1rem;
        color: #4f46e5;
        font-weight: 600;
      }
      .card-description {
        font-size: 0.875rem;
        color: #6b7280;
        margin-top: 1rem; /* Increased space above description */
        line-height: 1.5;
        flex-grow: 1; /* Allows description to fill space */
      }

      /* --- Apply Button --- */
      .apply-button {
        margin-top: 1.5rem;
        display: inline-block;
        width: 100%;
        background-color: #4f46e5;
        color: #ffffff;
        font-weight: 700;
        padding: 0.75rem 0.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: background-color 0.3s ease;
        box-sizing: border-box;
      }
      .apply-button:hover {
        background-color: #4338ca;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="pre-header">
        <a
          href="https://www.meetup.com/web-performance-ny/"
          target="_blank"
          rel="noopener noreferrer"
        >
          NY UX Speed and Web Performance Meetup
        </a>
      </div>

      <div class="header">
        <h1><%= roles.title %></h1>
        <p><%= roles.description %></p>
      </div>

      <div class="roles-grid">
        <% roles.team.forEach(function(member) { %>
        <div
          class="card <%= member.name ? 'occupied-card' : 'unoccupied-card' %>"
        >
          <div>
            <% if (member.imageUrl) { %> <% if (member.pageUrl) { %>
            <a
              href="<%= member.pageUrl %>"
              target="_blank"
              rel="noopener noreferrer"
            >
              <img
                class="card-img"
                src="<%= member.imageUrl %>"
                alt="Profile picture of <%= member.name %>"
                fetchpriority="high"
              />
            </a>
            <% } else { %>
            <img
              class="card-img"
              src="<%= member.imageUrl %>"
              alt="Profile picture of <%= member.name %>"
              fetchpriority="high"
            />
            <% } %> <% } else { %>
            <a
              href="<%= roles.applicationUrl %>"
              target="_blank"
              rel="noopener noreferrer"
            >
              <div
                class="card-img card-img-placeholder"
                aria-label="Placeholder for an open role"
              ></div>
            </a>
            <% } %>

            <h2 class="card-title"><%= member.title %></h2>

            <% if (member.name) { %> <% if (member.pageUrl) { %>
            <a
              href="<%= member.pageUrl %>"
              class="card-name card-name-link"
              target="_blank"
              rel="noopener noreferrer"
              ><%= member.name %></a
            >
            <% } else { %>
            <p class="card-name"><%= member.name %></p>
            <% } %> <% } else { %>
            <p class="card-status">Position Available</p>
            <% } %> <% if (member.description) { %>
            <p class="card-description"><%= member.description %></p>
            <% } %>
          </div>

          <% if (!member.name) { %>
          <a
            href="<%= roles.applicationUrl %>"
            class="apply-button"
            target="_blank"
            rel="noopener noreferrer"
            >Apply Now</a
          >
          <% } %>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
